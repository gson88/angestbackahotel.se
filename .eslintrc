{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
//    "react-app"
  ],
  "plugins": ["react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "ecmaVersion": 6,
      "jsx": true,
      "modules": true
    }
  },
  "settings": {
    "react": {
      "createClass": "createClass",
      "pragma": "React",
      "version": "16.6.0"
    }
  },
  "env": {
    "es6": true,
    "jasmine": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "exports": false,
    "module": false,
    "process": false,
    "__DEV__": false,
    "jest": false,
    "test": false,
    "shallowWithIntl": false,
    "mountWithIntl": false,
    "jsdom": false,
    "google": false
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "curly": 2,
    "jsx-quotes": [0, "prefer-double"],
    "keyword-spacing": 2,
    "no-irregular-whitespace": 0,
    "no-console": 0,
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-unused-vars": 2,
    "object-curly-spacing": [2, "always"],
    "quotes": [2, "single"],
    "react/jsx-tag-spacing": 2,
    "react/jsx-key": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/prop-types": 0,
    "react/no-array-index-key": 0,
    "react/no-unused-prop-types": 2,
    "react/no-unknown-property": 2,
    "react/react-in-jsx-scope": 2,
    "semi": [2, "always"],
    "space-before-blocks": 2,
    "strict": [2, "never"]
  }
}
